
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/Apps/app.js"></script>
<script src="~/Apps/JSController/LoginController.js"></script>
<script src="/Apps/JSService/LoginService.js"></script>

<div class="container" ng-app="POSManagement" ng-controller="LoginController">
    <div class=" w3l-login-form">
        <h2>Login Here</h2>
        @*<form action="#" method="POST">*@
            <div class=" w3l-form-group">
                <label>Username</label>
                <div class="group">
                    <input id="txtUserName" ng-model="obj.UserName" type="text" class="form-control" placeholder="Username" required="required" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Password</label>
                <div class="group">
                    <input id="txtPassword" ng-model="obj.Password" type="password" class="form-control" placeholder="Password" required="required" />
                </div>
            </div>
            <div class="forgot">
                <a href="#">Forgot Password?</a>
                <p><input type="checkbox">Remember Me</p>
            </div>
            @*<button type="submit">Login</button>*@
            <button type="submit" value="Login" ng-click="login(obj.UserName,obj.Password)" style="border-radius:5px;">Login</button>
        @*</form>*@
    </div>
</div>
